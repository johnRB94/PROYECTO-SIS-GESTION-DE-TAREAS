# ====================================
# Configuración de Base de Datos
# ====================================
SPRING_DATASOURCE_URL=jdbc:mysql://localhost:3306/sabormarcona_db?useSSL=false&serverTimezone=UTC
SPRING_DATASOURCE_USERNAME=root
SPRING_DATASOURCE_PASSWORD=

# ====================================
# Configuración de Servidor
# ====================================
SERVER_PORT=8080
SERVER_SERVLET_CONTEXT_PATH=/sabormarcona

# ====================================
# Configuración JWT
# ====================================
# CAMBIAR ESTA CLAVE EN PRODUCCIÓN - Mínimo 32 caracteres
APP_JWT_SECRET=MiClaveSecretaMuyLargaParaJWTAlMenos32CaracteresParaSeguridadTotal
# Expiración en milisegundos: 86400000 = 24 horas
APP_JWT_EXPIRATION_MS=86400000

# ====================================
# Configuración de Logging
# ====================================
LOGGING_LEVEL_COM_RESTAURANT_SABORMARCONA=DEBUG
LOGGING_LEVEL_ORG_SPRINGFRAMEWORK_SECURITY=DEBUG
LOGGING_LEVEL_ORG_SPRINGFRAMEWORK_WEB=INFO

# ====================================
# Configuración de JPA/Hibernate
# ====================================
SPRING_JPA_HIBERNATE_DDL_AUTO=update
SPRING_JPA_SHOW_SQL=false
SPRING_JPA_PROPERTIES_HIBERNATE_FORMAT_SQL=true

# ====================================
# Configuración de Aplicación
# ====================================
SPRING_APPLICATION_NAME=sabormarcona
SPRING_PROFILES_ACTIVE=dev

# ====================================
# Pool de Conexiones
# ====================================
SPRING_DATASOURCE_HIKARI_MAXIMUM_POOL_SIZE=10
SPRING_DATASOURCE_HIKARI_MINIMUM_IDLE=5
SPRING_DATASOURCE_HIKARI_CONNECTION_TIMEOUT=20000
